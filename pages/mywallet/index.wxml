<view class="mywallet-view">
  <view class="mywallet-view2">
    <image class='image' src='/images/balance.png'></image>
  </view>

  <view class='mywallet-view3' bindtap='balance'>
    <view>
      <view>余额</view>
      <text class='inte-style'>{{personalInfo.account_balance}}元           </text>
    </view>
    <text class='arrow'>></text>
  </view>
</view>

<view class="mywallet-view">
  <view class="mywallet-view2">
    <image style='width:117rpx;height:97rpx;' src='/images/deposit.png'></image>
  </view>

  <view class='mywallet-view3' bindtap='deposit'>
    <view>
      <view>押金</view>
      <text class='inte-style' style='color:{{personalInfo.deposit_status==1?"#ccc":"#f00"}};'>{{depositStatus}}</text>
    </view>
    <text class='arrow'>></text>
  </view>
</view>

<view class="mywallet-view">
  <view class="mywallet-view2">
    <image class='image' src='/images/detail.png'></image>
  </view>

  <view class='mywallet-view3' bindtap='rechargerecord'>
    <view>
      <view>明细</view>
      <text class='inte-style'>交易明细               </text>
    </view>
    <text class='arrow'>></text>
  </view>
</view>