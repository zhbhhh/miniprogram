/* pages/rechargerecord/index.wxss */
page{
  background: #ccc;
}
.scroll{
  margin-top: 2rpx;
}
.divLine{
 background: #E0E3DA;
 width: 100%;
 height: 2rpx;
 margin-top: 20rpx;
}
.item-view{
  margin-left: 10%;
  margin-right: 10%;
  display: flex;
  flex-direction: column;
}
.item-view text{
  font-size: 12px;
}
.item-state{
  position: absolute;
  right: 10%;
  margin-top: 18rpx;
  border-width: medium;
  border: 1rpx;
  border-radius: 50rpx;
  border-color: #777;
  font-size: 12px;
  border-style: solid;
  padding-top: 5rpx;
  padding-bottom: 5rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  text-align: center;

}
.father-view{
  background: #fff;
  height: 16vh;
}
.item-time{
  font-size: 14px;
  margin-top: 20rpx;
}
.eqnum{
  margin-top: 20rpx;
  color: #ccc;
}
.bottom-view{
  display: flex;
  align-items: center;
  flex-direction: row;
  width: 100%;
  margin-top: 20rpx;
}
.duration-view{
  display: flex;
  justify-content: center;
  
}
.duration-view text{
  color: #ccc;
  margin-left: 10rpx;
}
.cost-view{
  display: flex;
  flex: 1;
  justify-content: center;
  align-items: center;
}
.cost-view text{
  color: #ccc;
  margin-left: 10rpx;
}
.image{
  width: 25rpx;
  height: 25rpx;
  align-self: center;
}
.no-record{
  display: flex;
  width: 100%;
  height: 100vh;
  align-items: center;
  justify-content: center;
  background: #fff;
}