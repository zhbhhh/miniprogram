
page{
  background: #F7F7F7;
}
.home-header{
  display: flex;
  height: 10vh;
  background: #fff;
}
.divLine{
 background: #E0E3DA;
 width: 2rpx;
 height: 40rpx;
}
.left-user{
  display: flex;
  align-items: center;
  margin-left: 20px;
}

.right-user{
  display: flex;
  align-items: center;
  margin-right: 20px;
}
.home-input{
  display: flex;
  flex: 1;
  height: 5vh;
  border-radius: 20px;
  margin-left: 20px;
  margin-right: 20px;
  margin-top: 2.5vh;
  font-size: 25rpx;
  padding-left: 20rpx;
  background-color: #F7F7F7;
}
.image-state{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: absolute;
  right: 10%;
  width: 100rpx;
  height: 120rpx;
  background: #5EC5F2;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}
.image-state image{
  width: 50rpx;
  height: 50rpx;
}
.image-state text{
  font-size: 14px;
  margin-top: 5rpx;
  color: #fff;
}
.image{
  height: 200rpx;
  width: 30%;
  margin-left: 5%;
}
.item-view{
  margin-left: 20rpx;
  margin-top: 30rpx;
  width: 70%;
}
.opening{
  margin-left: 10rpx;
  font-size: 16px;
  color: #ccc;
  margin-top: 10rpx;
}
.item-header{
  display: flex;
  flex-direction: row;
  padding-top: 20rpx;
  margin-top: 20rpx;
  background: #fff;
  margin-left: 5%;
  margin-right: 5%;
  border-top-right-radius: 10rpx;
  border-top-left-radius: 10rpx;
}
.bottom-view{
  background: #fff;
  margin-left: 5%;
  margin-right: 5%;
  display: flex;
  padding-top: 20rpx;
  padding-bottom: 10rpx;
  justify-content: space-around;
  align-items: center;
  border-bottom-right-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
}
.item-name{
  font-size: 16px;
  
}
.borrow-view{
  margin-left: 40rpx;
}
.borrow-view text{
  font-size: 16px;
  color: #AFCDD7;
}
.repay-view{
  margin-right: 40rpx;
}
.repay-view text{
  font-size: 16px;
  color: #E1C5A6;
}
.addr-view{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 10rpx;
  /* width: 110%; */
}
.addr{
  font-size: 16px;
  color: #ccc;
  word-break: break-all;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 60%;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;

}
.distence{
  font-size: 16px;
  color: #ccc;
  position: absolute;
  right: 10%;
}
.open-image{
  width: 25rpx;
  height: 25rpx;
  align-self: center;
  margin-top: 10rpx;
}
.open-view{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.no-record{
  display: flex;
  width: 100%;
  height: 100vh;
  align-items: center;
  justify-content: center;
  background: #fff;
}